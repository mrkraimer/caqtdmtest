record(calc, "${name}")
{
        field(DESC, "Counter")
        field(SCAN,".1 second")
        field(CALC, "(A<B)?(A+C):D")
        field(INPA, "${name}  NPP NMS")
        field(INPB, "99")
        field(INPC, "1")
        field(INPD, "0")
        field(EGU, "Counts")
        field(HOPR, "100")
        field(HIHI, "80")
        field(HIGH, "60")
        field(LOW, "40")
        field(LOLO, "20")
        field(HHSV, "MAJOR")
        field(HSV, "MINOR")
        field(LSV, "MINOR")
        field(LLSV, "MAJOR")
}
